# manage volume
"changevolume 2%+"
    XF86AudioRaiseVolume
"changevolume 2%-"
    XF86AudioLowerVolume
"changevolume toggle"
    XF86AudioMute

# manage media player
"playerctl next"
    XF86AudioNext
"playerctl previous"
    XF86AudioPrev
"playerctl play-pause"
    XF86AudioPlay

# manage monitor brightness
"changebrightness 5%+"
    XF86MonBrightnessUp
"changebrightness 5%-"
    XF86MonBrightnessDown

# set keyboard layout
"select_keyboard.sh"
    Mod4 + Shift + l

"rofi -show calc"
    XF86Calculator
