# manage volume
"amixer sset Master 2%+"
    XF86AudioRaiseVolume
"amixer sset Master 2%-"
    XF86AudioLowerVolume
"amixer sset Master toggle"
    XF86AudioMute

# manage monitor brightness
"xbacklight -inc 5"
    XF86MonBrightnessUp
"xbacklight -dec 5"
    XF86MonBrightnessDown

# set keyboard layout
"select_keyboard.sh"
    Mod4 + Shift + l
