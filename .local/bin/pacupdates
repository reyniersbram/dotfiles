#!/usr/bin/env sh

update_list=$(checkupdates 2> /dev/null)
exit_code=$?

if [ $exit_code -eq 2 ]; then
    echo "no updates"
elif [ $exit_code -eq 0 ]; then
    updates=$(echo "$update_list" | wc -l)
    if [ "$updates" -eq 1 ]; then
        echo "$updates" update
    else
        echo "$updates" updates
    fi
else
    echo "unknown error"
fi
